<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="1. Fungicide Application"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Apply recommended fungicides during the appropriate growth stages"
        android:paddingLeft="16dp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Add more specific cultural practices if needed -->

    <!-- Step 2: Field Sanitation -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Use Resistant Varieties"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Choose rice varieties with resistance to false smut."
        android:paddingLeft="16dp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Add more specific field sanitation measures if needed -->

    <!-- Step 3: Chemical Control -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Field Hygiene"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Ensure proper field sanitation to reduce fungal spore buildup."
        android:paddingLeft="16dp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Add more specific chemical control measures if needed -->

    <!-- Step 4: Biological Control -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Crop Rotation"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Rotate crops to disrupt the disease cycle."
        android:paddingLeft="16dp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Add more specific biological control measures if needed -->

    <!-- Step 5: Resistant Varieties -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. Timely Harvest"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Harvest rice at the right time to minimize disease spread."
        android:paddingLeft="16dp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Add more specific information about resistant varieties if needed -->

    <!-- Step 6: Monitoring and Early Detection -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6. Consult Experts"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Seek advice from agricultural experts for specific recommendations based on local conditions."
        android:paddingLeft="16dp"
        android:textColor="@android:color/darker_gray"/>

    </LinearLayout>>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CREDITS"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rice Disease Solutions and Descriptions"
        android:textStyle="bold"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@android:color/black"/>

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="http://www.knowledgebank.irri.org/"
        android:textStyle="bold"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@android:color/holo_blue_light"/>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rice Disease Datasets"
        android:textStyle="bold"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@android:color/black"/>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
