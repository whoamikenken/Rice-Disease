<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="1. Use Resistant Varieties"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Plant tungro-resistant rice varieties if available in your region"
        android:paddingLeft="16dp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Add more specific cultural practices if needed -->

    <!-- Step 2: Field Sanitation -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Rogue Infected Plants"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Remove and destroy infected plants to prevent the spread of the virus."
        android:paddingLeft="16dp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Add more specific field sanitation measures if needed -->

    <!-- Step 3: Chemical Control -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Vector Control"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Manage the leafhopper vector that transmits the virus by using insecticides or other control methods."
        android:paddingLeft="16dp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Add more specific chemical control measures if needed -->

    <!-- Step 4: Biological Control -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Crop Rotation"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Rotate rice crops with non-host crops to break the disease cycle."
        android:paddingLeft="16dp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Add more specific biological control measures if needed -->

    <!-- Step 5: Resistant Varieties -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. Field Hygiene"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Ensure proper field hygiene by removing crop residues and weeds that may harbor the virus."
        android:paddingLeft="16dp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Add more specific information about resistant varieties if needed -->

    <!-- Step 6: Monitoring and Early Detection -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6. Monitoring and Early Detection"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Regularly monitor your crop for symptoms of tungro and take action at the first sign of infection."
        android:paddingLeft="16dp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Add more specific information about monitoring if needed -->

    <!-- Step 7: Water Management -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="7. Consult Agricultural Experts"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Seek advice from local agricultural extension services or experts for specific recommendations based on your region and rice variety."
        android:paddingLeft="16dp"
        android:textColor="@android:color/darker_gray"/>

    </LinearLayout>>

</LinearLayout>
