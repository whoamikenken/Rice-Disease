<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="1. Cultural Practices"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Rotate rice with non-host crops to break the disease cycle."
        android:paddingLeft="16dp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Add more specific cultural practices if needed -->

    <!-- Step 2: Field Sanitation -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Field Sanitation"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Remove and destroy infected plants and crop residues."
        android:paddingLeft="16dp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Add more specific field sanitation measures if needed -->

    <!-- Step 3: Chemical Control -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Chemical Control"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Use copper-based bactericides as a preventive measure."
        android:paddingLeft="16dp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Add more specific chemical control measures if needed -->

    <!-- Step 4: Biological Control -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Biological Control"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Explore biocontrol agents and products with beneficial microorganisms."
        android:paddingLeft="16dp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Add more specific biological control measures if needed -->

    <!-- Step 5: Resistant Varieties -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. Resistant Varieties"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Consider planting rice varieties resistant to bacterial leaf blight."
        android:paddingLeft="16dp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Add more specific information about resistant varieties if needed -->

    <!-- Step 6: Monitoring and Early Detection -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6. Monitoring and Early Detection"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Regularly monitor your rice crop for symptoms of bacterial leaf blight."
        android:paddingLeft="16dp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Add more specific information about monitoring if needed -->

    <!-- Step 7: Water Management -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="7. Water Management"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Manage water carefully to avoid prolonged leaf wetness."
        android:paddingLeft="16dp"
        android:textColor="@android:color/darker_gray"/>

    </LinearLayout>>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CREDITS"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rice Disease Solutions and Descriptions"
        android:textStyle="bold"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@android:color/black"/>

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="http://www.knowledgebank.irri.org/"
        android:textStyle="bold"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@android:color/holo_blue_light"/>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rice Disease Datasets"
        android:textStyle="bold"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@android:color/black"/>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="https://www.kaggle.com/"
        android:textStyle="bold"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@android:color/holo_blue_light"/>
    </LinearLayout>
</LinearLayout>
