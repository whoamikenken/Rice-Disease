<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="1. Fungicides"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Apply appropriate fungicides as per recommended guidelines"
        android:paddingLeft="16dp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Add more specific cultural practices if needed -->

    <!-- Step 2: Field Sanitation -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Resistant Varieties"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Consider planting rice varieties resistant to brown spot."
        android:paddingLeft="16dp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Add more specific field sanitation measures if needed -->

    <!-- Step 3: Chemical Control -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Cultural Practices"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Ensure proper water management, spacing, and crop rotation to reduce disease pressure."
        android:paddingLeft="16dp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Add more specific chemical control measures if needed -->

    <!-- Step 4: Biological Control -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Early Detection"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Regularly monitor your crop for symptoms and take prompt action."
        android:paddingLeft="16dp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Add more specific biological control measures if needed -->

    <!-- Step 5: Resistant Varieties -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. Crop Residue Management"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Remove and properly dispose of infected crop residues to minimize disease carryover."
        android:paddingLeft="16dp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Add more specific information about resistant varieties if needed -->

    <!-- Step 6: Monitoring and Early Detection -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6. Consult Experts"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Seek advice from agricultural extension services for tailored recommendations."
        android:paddingLeft="16dp"
        android:textColor="@android:color/darker_gray"/>

    </LinearLayout>>

</LinearLayout>
